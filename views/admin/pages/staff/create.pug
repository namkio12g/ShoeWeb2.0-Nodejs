extends ../../layout/default.pug
include ../../mixins/alerts/successAlert.pug
include ../../mixins/alerts/errorAlert.pug

include ../../mixins/categorySelItem.pug


block main
    +success_alert(messages.success)
    +error_alert(messages.error)
    .container-fluid.pd-none
    form.wrapper-add-product.mg-5.pd-none(method='POST' action=`/admin/staffs/add-new-staff?_method=PATCH` enctype="multipart/form-data" add-product-form)
        section.add-product-header.bg.d-flex
            div
                h2 Tạo mới nhân viên
            button.btn.btn-primary.save.btnSaveFormAddProduct(type='submit') Tạo mới

        section.add-product-body
            .row
                .col-7.bg
                    div.item.basic-information
                        .modal-header
                            h4.modal-title Basic Information : 
                        .modal-body
                            // product title
                            .row
                                .col-md-5
                                    .form-group
                                        label(for='prodcuct_title') Tên nhân viên
                                        input#prodcuct_title.form-control(type='text' name='name' placeholder='Tên' required)
                                        span#productError.text-danger
                                .col-md-4
                                    .form-group
                                        label(for='prodcuct_title') Email
                                        input#prodcuct_title.form-control(type='text' name='email' placeholder='Email của bạn' required)
                                .col-md-3
                                    .form-group
                                        label(for='discountPercentage' ) Số điện thoại
                                        span: i(class="fa-solid fa-circle-check")
                                        input#discountPercentage.form-control(name='phoneNumbers' type='Number' placeholder=' Số điện thoại')
                                        span#discountPercentageError.text-danger 
                            .row
                               
                                .col-md-4 
                                    .form-group
                                        label(for='category_name' ) Chức vụ
                                        span: i(class="fa-solid fa-circle-check")
                                        select#category_name.form-control(name='role' type='text' placeholder='' )
                                            for role in roles
                                                option.ps-3(value=role._id) ---#{role.title}---
                                        span#categoryError.text-danger
                                .col-md-4
                                    .form-group
                                        label(for='discountPercentage' ) Ngày sinh
                                        span: i(class="fa-solid fa-circle-check")
                                        input#discountPercentage.form-control(name='birthDay' type='Date' placeholder='')
                                .col-md-2
                                    .form-group
                                        label(for='discountPercentage' ) Giới tính
                                        span: i(class="fa-solid fa-circle-check")
                                        select#category_name.form-control(name='gender' type='text' placeholder='Giới tính chọn' )
                                            option.ps-3(value="male") Male
                                            option.ps-3(value="female") Female
                                            option.ps-3(value="other") Other


                            .row
                                .col-md-4
                                    .form-group
                                        label(for='category_name' ) Mật khẩu
                                        span: i(class="fa-solid fa-circle-check")
                                        input#prodcuct_title.form-control(type='password' name='originalPassword' placeholder='Tên' required)
                                
                
                            .row    
                                .col-md-4
                                    .form-group
                                        label(for='category_name' ) Nhập lại mật khẩu
                                        span: i(class="fa-solid fa-circle-check")
                                        input#prodcuct_title.form-control(type='password' name='confirmPassword' placeholder='Tên' required)
                               
                             
                            .row   
                                .col-md-12
                                    .form-group
                                        label(for='long_description') Miêu tả
                                        span: i(class="fa-solid fa-circle-check")

                                        textarea#long_description.form-control(name='description' rows='10' placeholder='Long Description' )
                                        span#long_description_error.text-danger
                .col-3.bg
                    div.item.visibility
                        .row
                            .modal-header
                                h4#exampleModalLabel.modal-title Trạng thái hoạt động : 
                            .modal-body
                                .row   
                                    .col-md-12
                                        .form-group
                                            label Trạng thái
                                        .form-group.statusProduct
                                            input#active(type='radio' name='status' value="active" checked)
                                            label.form-check-label(for='active')
                                                | Active
                                            input#inactive(type='radio' name='status' value="inactive")
                                                
                                            label.form-check-label(for='inactive')
                                                | Inactive
                                //- .row
                                //-     .col-md-12
                                //-         .form-group
                                //-             label(for='category_name') Publish Date
                                //-             input#updateAt.form-control(name='updateAt' type='text' required )
                                //-             span#categoryError.text-danger
                        .row
                            .modal-header
                                h4#exampleModalLabel.modal-title Image : 
                            .modal-body
                                .row
                                    .col-12
                                        .form-group
                                            label(for='product_thumbnail') Upload Product Thumbnail
                                            input#product_thumbnail.form-control(type='file' name='thumbnail' required thumbnail-input)
                                            span#thumbnail_error.text-danger
                .col-2.bg
                    .form-group
                        .modal-header
                            h4#exampleModalLabel.modal-title Preview Image
                        .modal-body
                            .preview-thumbnail
                                img(src="", alt="", srcset="" thumbnail-image)
