                                //- .row
                                //-     .col-md-12
                                //-         .form-group
                                //-             label(for='product_thumbnail') More thumbnails
                                //-             .row.form-add-more-thumbnail
                                                //- .col-4
                                                //-     .preview-thumbnail-more.preview-thumbnail
                                                //-         img(src="", alt="", srcset="")
    //-------------product edit----------------


    script(src="/build/product_add.bundle.js")





