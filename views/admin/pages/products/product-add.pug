extends ../../layout/default.pug

block main
  .wrapper
    include ../../partials/sider.pug
    .main
      include ../../partials/header.pug
      
      .container-fluid.pd-none
        form.wrapper-add-product.mg-5.pd-none(method='POST' action=`/admin/products/add-new-product` add-product-form)
            section.add-product-header.bg.d-flex
                div
                    h2 Tạo mới sản phẩm
                button.btn.btn-primary.save.btnSaveFormAddProduct(type='submit') Tạo mới

            section.add-product-body
                .row
                    .col-7.bg
                        div.item.basic-information
                            .modal-header
                                h4.modal-title Basic Information : 
                            .modal-body
                                // product title
                                .row
                                    .col-md-12
                                        .form-group
                                            label(for='prodcuct_title') Tiêu đề sản phẩm
                                            input#prodcuct_title.form-control(type='text' name='title' placeholder='Product Title' required)
                                            span#productError.text-danger
                                .row
                                    .col-md-6
                                        .form-group
                                            label(for='category_name' ) Loại sản phẩm
                                            span: i(class="fa-solid fa-circle-check")

                                            input#category_name.form-control(name='category' type='text' placeholder='Product category' required)
                                            span#categoryError.text-danger
                                    .col-md-6
                                        .form-group
                                            label(for='category_name') Hãng sản phẩm
                                            span: i(class="fa-solid fa-circle-check")

                                            input#brand_name.form-control(name='brand' type='text' placeholder='Product brand' required )
                                            span#categoryError.text-danger
                                .row
                                    .col-md-12
                                        .form-group
                                            label(for='prodcuct_price') Giá sản phẩm
                                            span: i(class="fa-solid fa-circle-check")

                                            input#product_price.form-control(required type='text' name='price' placeholder='Product Price' )
                                            span#productPriceError.text-danger

                                .row#SizePriceStock
                                    .row
                                        .col-md-6.p-0
                                            .form-group
                                                label Kích cỡ
                                        .col-md-5.p-0
                                            .form-group
                                                label Số lượng
                                        .col-md-1
                                            button#add.btn.btn-primary.btnAddSizeProduct(type="button" add-sizestock-btn) add
                                    .row.m-0.p-0(style="max-height:150px;overflow:scroll" stock-size-fields)
                                        .row.mt-0.mb-4.p-0.d-flex.flex-row.align-items-center
                                            .col-md-6
                                                .form-group
                                                    input#product-size.form-control(type='Number' product-size placeholder='Size Product')
                                                    span#productSizeError.text-danger
                                            .col-md-4
                                                .form-group
                                                    input#product-stock.form-control(type='Number' product-stock placeholder='Stock')
                                                    span#productError.text-danger
                                            .col-md-1
                                                button.btn.btn-danger(type="button" remove-sizestock-btn) remove
                         
                                .row 
                                    .col-md-6
                                        .form-group
                                            label(for='discountPercentage' ) Discount
                                            span: i(class="fa-solid fa-circle-check")
                                            input#discountPercentage.form-control(name='discountPercentage' type='Number' placeholder='Product discountPercentage' required)
                                            span#discountPercentageError.text-danger
                                    .col-md-6
                                        .form-group
                                            label Gender
                                        .form-group.d.flex.flex-row.justify-content-between.statusProduct
                                            input#male(type='radio' name='gender' value="male" )
                                            label.form-check-label(for='male')
                                                | male
                                            input#female(type='radio' name='gender' value="female")
                                                
                                            label.form-check-label(for='female')
                                                | female
                                            input#unisex(type='radio' name='gender' value="unisex" checked)
                                                
                                            label.form-check-label(for='unisex')
                                                | unisex
                                                
                                .row   
                                    .col-md-12
                                        .form-group
                                            label(for='long_description') Description
                                            span: i(class="fa-solid fa-circle-check")

                                            textarea#long_description.form-control(name='description' rows='10' placeholder='Long Description' )
                                            span#long_description_error.text-danger
                    .col-5.bg
                        div.item.visibility
                            .row
                                .modal-header
                                    h4#exampleModalLabel.modal-title Trạng thái hoạt động : 
                                .modal-body
                                    .row   
                                        .col-md-12
                                            .form-group
                                                label Trạng thái
                                            .form-group.statusProduct
                                                input#active(type='radio' name='status' value="active" checked)
                                                label.form-check-label(for='active')
                                                    | Active
                                                input#inactive(type='radio' name='status' value="inactive")
                                                    
                                                label.form-check-label(for='inactive')
                                                    | Inactive
                                    //- .row
                                    //-     .col-md-12
                                    //-         .form-group
                                    //-             label(for='category_name') Publish Date
                                    //-             input#updateAt.form-control(name='updateAt' type='text' required )
                                    //-             span#categoryError.text-danger
                            .row
                                .modal-header
                                    h4#exampleModalLabel.modal-title Image : 
                                .modal-body
                                    .row
                                        .col-md-5
                                            .form-group
                                                label(for='product_thumbnail') Upload Product Thumbnail
                                                input#product_thumbnail.form-control(type='file' name='thumbnail' )
                                                span#thumbnail_error.text-danger
                                        .col-md-5
                                            .form-group
                                                label(for='product_thumbnail') Preview Image
                                                .preview-thumbnail
                                                    img(src="", alt="", srcset="")
